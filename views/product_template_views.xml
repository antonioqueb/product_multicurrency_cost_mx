<odoo>
    <record id="product_template_form_view_inherit_cost" model="ir.ui.view">
        <field name="name">product.template.form.inherit.cost</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <label for="foreign_cost_price" string="Costo Extranjero (USD)"/>
                <div class="o_row">
                    <field name="foreign_cost_price" widget="monetary" options="{'currency_field': 'cost_currency_id'}"/>
                    <field name="cost_currency_id" options="{'no_create': True}"/>
                    <button name="action_update_cost_from_usd" string="Update MXN Cost" type="object" icon="fa-refresh" class="btn-link"/>
                </div>
                <field name="last_rate_used" readonly="1" invisible="last_rate_used == 0"/>
            </xpath>
        </field>
    </record>
</odoo>
