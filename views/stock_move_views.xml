<odoo>
    <record id="view_move_tree_valuation_usd" model="ir.ui.view">
        <field name="name">stock.move.tree.valuation.usd</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field name="usd_currency_id" column_invisible="True"/>
                <field name="usd_unit_cost" string="Costo Unit. USD" optional="show" widget="monetary" options="{'currency_field': 'usd_currency_id'}"/>
                <field name="usd_value" string="Valor Total USD" optional="show" sum="Total USD" widget="monetary" options="{'currency_field': 'usd_currency_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>